<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.image.*?>
<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.js.galleryreview.ui.MainWindowCtrl">
   <left>
      <VBox>
         <children>
            <ToolBar nodeOrientation="RIGHT_TO_LEFT" prefHeight="40.0" prefWidth="200.0">
              <items>
                <Button mnemonicParsing="false" text="Button" />
                  <Label fx:id="lblReviewName" text="-" />
              </items>
            </ToolBar>
            <TreeTableView fx:id="ttvRepository" prefHeight="200.0" prefWidth="350.0" BorderPane.alignment="CENTER">
              <columns>
                <TreeTableColumn fx:id="tcNavigation" prefWidth="148.0" text="%tree.naventry" />
                <TreeTableColumn fx:id="tcNavState" minWidth="2.0" prefWidth="200.0" text="%tree.state" />
              </columns>
            </TreeTableView>
         </children>
      </VBox>
   </left>
   <center>
      <VBox>
         <children>
            <ToolBar nodeOrientation="RIGHT_TO_LEFT" prefHeight="40.0" prefWidth="200.0">
              <items>
                  <Button fx:id="btnNext" mnemonicParsing="false" text="&gt;" />
                <Button fx:id="btnConfirm" mnemonicParsing="false" text="conf" />
                  <Button fx:id="btnDel" mnemonicParsing="false" text="del" />
                  <Button fx:id="btnPrev" mnemonicParsing="false" text="&lt;" />
              </items>
            </ToolBar>
            <ImageView fx:id="ivMainImage" fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" BorderPane.alignment="CENTER" />
         </children>
      </VBox>
   </center>
   <right>
      <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
         <children>
            <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" />
            <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" />
            <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" />
         </children>
      </VBox>
   </right>
   <top>
      <VBox prefWidth="100.0" BorderPane.alignment="CENTER">
         <children>
            <MenuBar>
              <menus>
                <Menu mnemonicParsing="false" text="File">
                  <items>
                    <MenuItem mnemonicParsing="false" text="Close" />
                  </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Edit">
                  <items>
                    <MenuItem mnemonicParsing="false" text="Delete" />
                  </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Help">
                  <items>
                    <MenuItem mnemonicParsing="false" text="About" />
                  </items>
                </Menu>
              </menus>
            </MenuBar>
         </children>
      </VBox>
   </top>
</BorderPane>
